# Azure Batch Transcription Test Environment Variables
# Copy this file to .env and fill in your credentials

# Azure Speech Services Configuration
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=swedencentral

# Azure Storage Configuration (required for batch transcription)
# The batch API requires audio files to be accessible via URL
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string_here
AZURE_STORAGE_CONTAINER=transcription-audio

# Optional: Test file paths
TEST_AUDIO_FILE=/path/to/test/audio.mp3
TEST_VIDEO_FILE=/path/to/test/video.mkv
